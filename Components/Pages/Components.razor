@page "/components"

<PageTitle>Components</PageTitle>

<h1>Components</h1>

<p>Examples of reusable UI components.</p>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Badge</h5>
                <span class="badge text-bg-primary">Primary</span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Alert</h5>
                <div class="alert alert-info mb-0" role="alert">
                    Informational message.
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Button</h5>
                <button class="btn btn-success" type="button">Action</button>
            </div>
        </div>
    </div>
</div>
