@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <div class="main-content px-4">
            <article class="content">
                @Body
            </article>
        </div>
    </main>

    <aside class="right-panel">
        <MudPaper Class="pa-3 right-panel-paper">
            <MudText Typo="Typo.h6" Class="mb-2">Expansion Examples</MudText>
            <MudExpansionPanels>
                <MudExpansionPanel Text="Basic Information">
                    <MudText Typo="Typo.body2">This panel can hold short introductory content.</MudText>
                </MudExpansionPanel>
                <MudExpansionPanel Text="Performance Notes">
                    <MudText Typo="Typo.body2">Use this section for rendering and loading observations.</MudText>
                </MudExpansionPanel>
                <MudExpansionPanel Text="Configuration">
                    <MudText Typo="Typo.body2">Place app settings or parameter explanations here.</MudText>
                </MudExpansionPanel>
                <MudExpansionPanel Text="Troubleshooting">
                    <MudText Typo="Typo.body2">Document common issues and quick resolution steps.</MudText>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudPaper>
    </aside>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
